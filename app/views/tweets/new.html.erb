<div class="content-row">
  <div class="container">
    <%= form_with model: @tweet, local: true do |f| %>

    <div class='new-wrap'>
      <div class='new-header'>
        <h1 class='new-header-text'>
          NEW PHOTO
        </h1>
      </div>

      <div class="img-upload">
        <div class="weight-bold-text">
          PHOTO
        <span class="indispensable">*</span>
      </div>
      <div class="click-upload">
        <p>
          CLICK AND UPLOADS!!
        </p>
        <%= f.file_field :image, id:"tweet-image" %>
      </div>
      <div class='weight-bold-text'>
        TEXT
        <span class='indispensable'>*</span>
      </div>
        <textarea><%= f.text_field :text, id:'tweet-text', placeholder:"typing something in here!" %></textarea>
      <div class="weight-bold-text">
        BRAND
        <span class="indispensable">*</span>
      </div>
      <%= f.collection_select(:brand_id, Brand.all, :id, :name, {}, {class:"select-box", id:"tweet-brand"}) %>
      <div class="weight-bold-text">
        CAMERA
        <span class="indispensable">*</span>
      </div>
      <%= f.collection_select(:camera_id, Camera.all, :id, :name, {}, {class:"select-box", id:"tweet-camera"}) %>
      <div class="weight-bold-text">
        SENSOR
        <span class="indispensable">*</span>
      </div>
      <%= f.collection_select(:sensor_id, Sensor.all, :id, :name, {}, {class:"select-box", id:"tweet-sensor"}) %>
      <div class="weight-bold-text">
        RESOLUTION
        <span class="indispensable">*</span>
      </div>
      <%= f.collection_select(:resolution_id, Resolution.all, :id, :name, {}, {class:"select-box", id:"tweet-resolution"}) %>
    </div>
    <div class="sell-btn-contents">
      <%= f.submit "SEND", class: "send-btn"%>
      <%=link_to 'BACK', root_path, class: "back-btn" %>
    </div>
    <% end %>
  </div>
</div>
